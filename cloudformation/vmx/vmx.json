{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "CloudFormation template to create vMX with 2 interfaces",
    "Mappings": {
        "vMXAMI": {
            "ap-northeast-1": {
                "BYOL": "ami-54dd1635",
                "LicenseIncluded": "ami-5d64243a"
            },
            "ap-northeast-2": {
                "BYOL": "ami-58e43136",
                "LicenseIncluded": "ami-0378a96d"
            },
            "ap-south-1": {
                "BYOL": "ami-15a4d17a",
                "LicenseIncluded": "ami-814332ee"
            },
            "ap-southeast-1": {
                "BYOL": "ami-60b36803",
                "LicenseIncluded": "ami-22338741"
            },
            "ap-southeast-2": {
                "BYOL": "ami-18e1d77b",
                "LicenseIncluded": "ami-aa9b9dc9"
            },
            "eu-central-1": {
                "BYOL": "ami-67a55608",
                "LicenseIncluded": "ami-22ae664d"
            },
            "eu-west-1": {
                "BYOL": "ami-d2cab9a1",
                "LicenseIncluded": "ami-63002505"
            },
            "sa-east-1": {
                "BYOL": "ami-d036a7bc",
                "LicenseIncluded": "ami-39ff9b55"
            },
            "us-east-1": {
                "BYOL": "ami-3f8fe628",
                "LicenseIncluded": "ami-0db3741b"
            },
            "us-east-2": {
                "BYOL": "ami-788fd41d",
                "LicenseIncluded": "ami-4b16332e"
            },
            "us-west-1": {
                "BYOL": "ami-c1d09da1",
                "LicenseIncluded": "ami-390d5159"
            },
            "us-west-2": {
                "BYOL": "ami-7d9b4a1d",
                "LicenseIncluded": "ami-b602b8d6"
            }
        }
    },
    "Parameters": {
        "AvailZone": {
            "Description": "Choose the Availability Zone to launch vMX instance",
            "Type": "AWS::EC2::AvailabilityZone::Name"
        },
        "LicenseModel": {
            "AllowedValues": [
                "LicenseIncluded",
                "BYOL"
            ],
            "Default": "LicenseIncluded",
            "Description": "Choose between BYOL and License Included",
            "Type": "String"
        },
        "SSHKey": {
            "Default": "CC",
            "Description": "Name of an existing EC2 KeyPair to enable SSH access to instances",
            "Type": "AWS::EC2::KeyPair::KeyName"
        },
        "vMXInstanceType": {
            "AllowedValues": [
                "m4.xlarge",
                "m4.2xlarge",
                "m4.4xlarge",
                "m4.10xlarge",
                "c3.2xlarge",
                "c3.4xlarge",
                "c3.8xlarge",
                "c4.4xlarge",
                "c4.8xlarge"
            ],
            "Default": "m4.10xlarge",
            "Description": "Instance type that is needed",
            "Type": "String"
        },
        "vMXName": {
            "Description": "vMX instance name to be assigned",
            "MaxLength": "16",
            "Type": "String"
        },
        "vMXSubnet1": {
            "Default": "",
            "Description": "Subnet where the mgmt interface will get ip address",
            "Type": "AWS::EC2::Subnet::Id"
        },
        "vMXSubnet2": {
            "Default": "",
            "Description": "Subnet where the WAN interface will get ip address",
            "Type": "AWS::EC2::Subnet::Id"
        },
        "vMXVPC": {
            "Description": "VPC where the vMX instance to be placed",
            "Type": "AWS::EC2::VPC::Id"
        }
    },
    "Resources": {
        "vMX": {
            "Properties": {
                "AvailabilityZone": {
                    "Ref": "AvailZone"
                },
                "ImageId": {
                    { "Fn::FindInMap": ["vMXAMI", { "Ref": "AWS::Region" }, { "Ref": "LicenseModel" } ] }
                },
                "InstanceType": {
                    "Ref": "vMXInstanceType"
                },
                "KeyName": {
                    "Ref": "SSHKey"
                },
                "NetworkInterfaces": [
                    {
                        "DeviceIndex": "0",
                        "NetworkInterfaceId": {
                            "Ref": "vMXSubnet1"
                        }
                    },
                    {
                        "DeviceIndex": "1",
                        "NetworkInterfaceId": {
                            "Ref": "vMXSubnet2"
                        }
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Ref": "vMXName"
                        }
                    }
                ]
            },
            "Type": "AWS::EC2::Instance",
            "DisableAPiTermination": {"Fn::If": ["cndEnableTerm", true, false]}
        },
        "ccSubnet": {
            "Properties": {
                "AvailabilityZone": {
                    "Ref": "AvailZone"
                },
                "CidrBlock": {
                    "Ref": "CCSubnet"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Join": [
                                "-",
                                [
                                    {
                                        "Ref": "CCName1"
                                    },
                                    "Subnet"
                                ]
                            ]
                        }
                    }
                ],
                "VpcId": {
                    "Ref": "ccVPC"
                }
            },
            "Type": "AWS::EC2::Subnet"
        },
        "ccVPC": {
            "Properties": {
                "CidrBlock": {
                    "Ref": "CCVPC"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Join": [
                                "-",
                                [
                                    {
                                        "Ref": "CCName1"
                                    },
                                    "VPC"
                                ]
                            ]
                        }
                    }
                ]
            },
            "Type": "AWS::EC2::VPC"
        },
        "iGW": {
            "Properties": {
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Join": [
                                "-",
                                [
                                    {
                                        "Ref": "CCName1"
                                    },
                                    "iGW"
                                ]
                            ]
                        }
                    }
                ]
            },
            "Type": "AWS::EC2::InternetGateway"
        },
        "iGWToInternet": {
            "Properties": {
                "InternetGatewayId": {
                    "Ref": "iGW"
                },
                "VpcId": {
                    "Ref": "ccVPC"
                }
            },
            "Type": "AWS::EC2::VPCGatewayAttachment"
        }
    }
}
